@model HallShop

@*@section Name{
    <span>@ViewBag.HallShopOwner.Name</span>
}*@
<div class="row">
    <div class="col-sm-3 col-md-6 col-lg-8">
        <form asp-controller="HallShopOwner" method="post" asp-action="AddHS" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="OwnerId" value="@ViewBag.OwnerId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required="" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" required="" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" required="" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Station" class="control-label"></label>
                <input asp-for="Station" class="form-control" required="" />
                <span asp-validation-for="Station" class="text-danger"></span>
            </div>

            <div class="form-group" onchange="select()">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" required="" >
                    <option>--- selet ---</option>
                    <option value="Hall">Hall</option>
                    <option value="Shop">Shop</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group" id="area" style="display:none">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" type="number" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <div class="form-group" id="typeOfShop" style="display:none">
                <label asp-for="TypeOfShop" class="control-label"></label>
                <select asp-for="TypeOfShop" class="form-control">
                    <option selected>--- selet ---</option>
                    <option value="Resturant">Resturant</option>
                    <option value="HairCutSalon">Hair Cut Salon</option>
                    <option value="Hairdresser">Hairdresser</option>
                    <option value="other">other</option>
                </select>
                <span asp-validation-for="TypeOfShop" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="photo" class="control-label">Imag</label>
                <input asp-for="photo" class="form-control" accept="image/*" required="" />
                <span asp-validation-for="photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" required="" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary relative" />
            </div>
        </form>
    </div>
</div>