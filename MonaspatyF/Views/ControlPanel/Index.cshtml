@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="modal fade" id="details">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
            </div>
            <div class="modal-body" id="Details_Body">

            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="close" />
            </div>
        </div>
    </div>
</div>

<p>
    <a class="btn btn-success" onclick="Create()">Create New</a>
    <a class="btn btn-outline-info" asp-action="MessageShow">Show Message</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                   National ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                    @*@Html.DisplayNameFor(model => model.phone)*@
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.HallShopOwner)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.SSN)*@
                        @item.SSN
                    </td>
                    <td>
                        @item.name
                    </td>
                    <td>
                        @item.email
                    </td>
                    <td>
                        @item.phone
                    </td>
                    <td>
                        <a onclick="Edit(@item.Id)" class="btn btn-info" data-backdrop="static">Edit</a>
                        <a onclick="ShowDetails(@item.Id)" class="btn btn-info" data-backdrop="static">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure Delete User?' )">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>